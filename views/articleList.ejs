<!DOCTYPE html>
<html lang="en">

<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>All Articles - Blog Platform</title>
  <link rel="stylesheet" href="/css/style.css">
</head>

<body>
  <%- include('partials/navbar') %>

    <main class="container">
      <div class="page-header">
        <h1>All Articles</h1>
        <a href="/create" class="btn btn-primary">Create New Article</a>
      </div>

      <% if (articles.length===0) { %>
        <div class="empty-state">
          <p>No articles yet. Be the first to create one!</p>
          <a href="/create" class="btn btn-secondary">Create Article</a>
        </div>
        <% } else { %>
          <div class="articles-grid">
            <% articles.forEach(article=> { %>
              <div class="article-card">
                <div class="article-header">
                  <h2 class="article-title">
                    <%= article.title %>
                  </h2>
                  <span class="article-date">
                    <%= new Date(article.createdAt).toLocaleDateString() %>
                  </span>
                </div>

                <p class="article-content">
                  <%= article.content.substring(0, 150) %>
                    <%= article.content.length> 150 ? '...' : '' %>
                </p>

                <div class="article-footer">
                  <div class="article-author">
                    <span class="author-label">By</span>
                    <span class="author-name">
                      <%= article.author.username %>
                    </span>
                    <% if (article.author.role==='admin' ) { %>
                      <span class="badge badge-admin">Admin</span>
                      <% } %>
                  </div>

                  <div class="article-actions">
                    <% if (user.id===article.author._id.toString() || user.role==='admin' ) { %>
                      <a href="/edit/<%= article._id %>" class="btn btn-small btn-secondary">Edit</a>
                      <a href="/delete/<%= article._id %>" class="btn btn-small btn-danger"
                        onclick="return confirm('Are you sure you want to delete this article?')">Delete</a>
                      <% } %>
                  </div>
                </div>
              </div>
              <% }) %>
          </div>
          <% } %>
    </main>

    <footer class="footer">
      <p>&copy; 2026 Blog Platform. Built with JWT Authentication & Role-Based Access.</p>
    </footer>
</body>

</html>